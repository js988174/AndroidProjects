<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".Main.My39.History.TermSettingFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dialog_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/card_background2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendardsemi"
                android:text="기간 설정"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="24dp"
                android:textColor="@color/black2"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_background"
            android:paddingRight="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_layout">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout25"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/background_radius_gray18"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/month"
                    android:layout_width="58dp"
                    android:layout_height="35dp"
                    android:fontFamily="@font/pretendardregular"
                    android:text="1개월"
                    android:textColor="@color/black2"
                    android:textSize="12dp"
                    android:background="@drawable/background_no_right_uncheck"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/month3"
                    android:layout_width="58dp"
                    android:layout_height="35dp"
                    android:fontFamily="@font/pretendardregular"
                    android:text="3개월"
                    android:textColor="@color/black2"
                    android:textSize="12dp"
                    android:background="@drawable/background_center_uncheck"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/month"
                    app:layout_constraintTop_toTopOf="parent"/>



                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/year"
                    android:layout_width="58dp"
                    android:layout_height="35dp"
                    android:fontFamily="@font/pretendardregular"
                    android:text="1년"
                    android:textColor="@color/black2"
                    android:textSize="12dp"
                    android:background="@drawable/background_center_uncheck"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/month3"
                    app:layout_constraintTop_toTopOf="parent"/>


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/direct"
                    android:layout_width="58dp"
                    android:layout_height="35dp"
                    android:fontFamily="@font/pretendardregular"
                    android:text="직접입력"
                    android:textColor="@color/black2"
                    android:textSize="12dp"
                    android:background="@drawable/background_no_left_uncheck"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/year"
                    app:layout_constraintTop_toTopOf="parent"/>



            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/textView88"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/pretendardregular"
                android:text="최근 1년까지 이력만 조회 가능합니다."
                android:textColor="@color/black5"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout25" />

            <TextView
                android:id="@+id/textView89"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/pretendardsemi"
                android:text="시작일"
                android:textColor="@color/black5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView88" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/change_btn1"
                android:layout_width="44dp"
                android:layout_height="24dp"
                android:visibility="gone"
                android:text="변경"
                android:outlineProvider="none"
                android:textSize="12dp"
                android:fontFamily="@font/pretendardsemi"
                android:textColor="@color/black4"
                android:background="@drawable/background_radius_gray18"
                app:layout_constraintBottom_toBottomOf="@+id/start_day"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/start_day" />


            <TextView
                android:id="@+id/start_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2021.08.01"
                android:layout_marginRight="5dp"
                android:textColor="@color/black4"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView89"
                app:layout_constraintEnd_toStartOf="@+id/change_btn1"
                app:layout_constraintTop_toTopOf="@+id/textView89"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView90"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/pretendardsemi"
                android:text="종료일"
                android:textColor="@color/black5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView89" />


            <TextView
                android:id="@+id/end_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2021.08.01"
                android:textSize="14dp"
                android:textColor="@color/black4"
                android:layout_marginRight="5dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView90"
                app:layout_constraintEnd_toStartOf="@+id/change_btn2"
                app:layout_constraintTop_toTopOf="@+id/textView90" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/change_btn2"
                android:layout_width="44dp"
                android:layout_height="24dp"
                android:visibility="gone"
                android:text="변경"
                android:textSize="12dp"
                android:outlineProvider="none"
                android:fontFamily="@font/pretendardsemi"
                android:textColor="@color/black4"
                android:background="@drawable/background_radius_gray18"
                app:layout_constraintBottom_toBottomOf="@+id/end_day"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/end_day" />



            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/background_radius_maincolor2"
                android:fontFamily="@font/pretendard_bold"
                android:outlineProvider="none"
                android:text="취소"
                android:textColor="@color/black2"
                android:textSize="14dp"
                android:layout_marginTop="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/ok"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView90" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ok"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/background_radius_maincolor3"
                android:fontFamily="@font/pretendard_bold"
                android:outlineProvider="none"
                android:text="확인"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cancel"
                app:layout_constraintTop_toBottomOf="@+id/end_day" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>