<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/season1_laout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/season_bg"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/bg5"
            android:padding="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/season_image1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/sold_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sold_out"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/season_bg"
                app:layout_constraintEnd_toEndOf="@+id/season_bg"
                app:layout_constraintStart_toStartOf="@+id/season_bg"
                app:layout_constraintTop_toTopOf="@+id/season_bg" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/season_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/pretendard_bold"
            android:text="달고나 초코라떼 아이스"
            android:textColor="@color/black2"
            android:textSize="12dp"
            app:layout_constraintStart_toEndOf="@+id/season_bg"
            app:layout_constraintTop_toTopOf="@+id/season_bg" />


        <TextView
            android:id="@+id/season_content1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/lexend_light"
            android:text="Dalgona Chocolate Latte Ice"
            android:textColor="@color/black2"
            android:textSize="10dp"
            app:layout_constraintStart_toStartOf="@+id/season_title1"
            app:layout_constraintTop_toBottomOf="@+id/season_title1" />


        <TextView
            android:id="@+id/season_price1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/pretendmedium"
            android:text="6.700"
            android:textColor="@color/black2"
            android:textSize="10dp"
            app:layout_constraintStart_toStartOf="@+id/season_content1"
            app:layout_constraintTop_toBottomOf="@+id/season_content1" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>