<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@color/white"
            android:orientation="vertical"
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="일반로그인"
                    android:textColor="@color/mainPink"/>
                <TextView
                    android:id="@+id/snsLoginText"
                    android:layout_weight="1"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="간편로그인"
                    android:textColor="@color/mainPink"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="bottom"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="1"
                    android:background="@color/mainSkyBlue"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"/>
                <LinearLayout
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:background="@color/mainSkyBlue"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout12"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:padding="30dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

            <EditText
                android:background="@null"
                android:textColor="@color/mainPink"
                android:id="@+id/emailArea"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="email" />

            <LinearLayout
                android:background="@color/mainPink"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <EditText
                android:background="@null"
                android:layout_marginTop="20dp"
                android:textColor="@color/mainSkyBlue"
                android:id="@+id/passwordArea"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Password"
                android:inputType="textWebPassword" />

            <LinearLayout
                android:background="@color/mainPink"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout12">
            <Button
                android:textColor="@color/white"
                android:textSize="16sp"
                android:id="@+id/loginBtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/button_background_mainskyblue"
                android:text="Login"
                android:textAllCaps="false"/>
            <Button
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                android:id="@+id/noAcouuntBtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/button_background_mainpink"
                android:text="Non-Member Login"
                android:textAllCaps="false"/>
            <Button
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                android:id="@+id/joinBtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/button_background_mainskyblue"
                android:text="Join Us"
                android:textAllCaps="false"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>



</layout>