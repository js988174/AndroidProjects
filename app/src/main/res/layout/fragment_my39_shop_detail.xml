<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/colorGray"
        tools:context=".Main.My39.Shop.My39ShopDetailFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/collapsing_test"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@null"
        android:fitsSystemWindows="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/htab_collapse_toolbar"
                android:layout_width="match_parent"
                android:layout_height="460dp"
                android:fitsSystemWindows="true"
                android:background="@null"
                app:titleEnabled="false"
                app:layout_scrollFlags="scroll|enterAlwaysCollapsed">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:elevation="3dp"
                    app:layout_scrollFlags="scroll|enterAlways"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="매장정보"
                        android:fontFamily="@font/pretendardsemi"
                        android:textColor="@color/black2"
                        android:textSize="24dp" />


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/findImage"
                        android:layout_width="70dp"
                        android:layout_height="50dp">


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:src="@drawable/left"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.appcompat.widget.Toolbar>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:elevation="1dp"
                    app:cardCornerRadius="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    app:cardElevation="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/toolbar">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/card_view1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="20dp">


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/shop_item_layout"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/background_radius_white5"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>


                        <ImageView
                            android:id="@+id/favorite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/fix_gray"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                        <ImageView
                            android:id="@+id/imageView50"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/location_gray"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/shop_item_layout" />

                        <TextView
                            android:id="@+id/textView107"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:fontFamily="@font/pretendard_bold"
                            android:text="청라호수공원점"
                            android:textColor="@color/black2"
                            android:textSize="16dp"
                            app:layout_constraintBottom_toBottomOf="@+id/imageView50"
                            app:layout_constraintStart_toEndOf="@+id/imageView50"
                            app:layout_constraintTop_toTopOf="@+id/imageView50" />

                        <TextView
                            android:id="@+id/distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lexend_bold"
                            android:text="200M"
                            android:textColor="@color/black2"
                            android:textSize="13dp"
                            app:layout_constraintBottom_toBottomOf="@+id/textView107"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/textView107" />


                        <TextView
                            android:id="@+id/textView108"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/pretendardregular"
                            android:text="인천광역시 서구 크리스탈로 102 인천광역시 서구 크리스탈로 102 인청광역시 서구 크리스탈로 120"
                            android:textColor="@color/black5"
                            android:textSize="14dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView107" />

                        <ImageView
                            android:id="@+id/imageView51"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="22dp"
                            android:src="@drawable/available_icon"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView108" />

                        <TextView
                            android:id="@+id/textView109"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:fontFamily="@font/pretendard_bold"
                            android:text="주문 가능 시간"
                            android:textColor="@color/black2"
                            android:textSize="16dp"
                            app:layout_constraintBottom_toBottomOf="@+id/imageView51"
                            app:layout_constraintStart_toEndOf="@+id/imageView51"
                            app:layout_constraintTop_toTopOf="@+id/imageView51" />

                        <TextView
                            android:id="@+id/textView110"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/pretendardregular"
                            android:text="평일"
                            android:textColor="@color/black5"
                            android:textSize="14dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/imageView51" />

                        <TextView
                            android:id="@+id/date1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:fontFamily="@font/pretendardregular"
                            android:text="09:00"
                            android:textColor="@color/black5"
                            android:textSize="14dp"
                            app:layout_constraintBottom_toBottomOf="@+id/textView110"
                            app:layout_constraintStart_toEndOf="@+id/textView110"
                            app:layout_constraintTop_toTopOf="@+id/textView110" />

                        <TextView
                            android:id="@+id/textView111"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:fontFamily="@font/pretendardregular"
                            android:text="~"
                            android:textColor="@color/black5"
                            android:textSize="14dp"
                            app:layout_constraintBottom_toBottomOf="@+id/date1"
                            app:layout_constraintStart_toEndOf="@+id/date1"
                            app:layout_constraintTop_toTopOf="@+id/date1" />

                        <TextView
                            android:id="@+id/date2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:fontFamily="@font/pretendardregular"
                            android:text="09:00"
                            android:textColor="@color/black5"
                            android:textSize="14dp"
                            app:layout_constraintBottom_toBottomOf="@+id/textView111"
                            app:layout_constraintStart_toEndOf="@+id/textView111"
                            app:layout_constraintTop_toTopOf="@+id/textView111" />


                        <TextView
                            android:id="@+id/textView112"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:fontFamily="@font/pretendardregular"
                            android:text="|"
                            android:textColor="@color/black5"
                            android:textSize="14dp"
                            app:layout_constraintBottom_toBottomOf="@+id/date2"
                            app:layout_constraintStart_toEndOf="@+id/date2"
                            app:layout_constraintTop_toTopOf="@+id/date2" />


                        <TextView
                            android:id="@+id/textView113"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:fontFamily="@font/pretendardregular"
                            android:text="주말"
                            android:textColor="@color/black5"
                            android:textSize="14dp"
                            app:layout_constraintBottom_toBottomOf="@+id/textView112"
                            app:layout_constraintStart_toEndOf="@+id/textView112"
                            app:layout_constraintTop_toTopOf="@+id/textView112" />

                        <TextView
                            android:id="@+id/date3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:fontFamily="@font/pretendardregular"
                            android:text="09:00"
                            android:textColor="@color/black5"
                            android:textSize="14dp"
                            app:layout_constraintBottom_toBottomOf="@+id/textView113"
                            app:layout_constraintStart_toEndOf="@+id/textView113"
                            app:layout_constraintTop_toTopOf="@+id/textView113" />

                        <TextView
                            android:id="@+id/textView114"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:fontFamily="@font/pretendardregular"
                            android:text="~"
                            android:textColor="@color/black5"
                            android:textSize="14dp"
                            app:layout_constraintBottom_toBottomOf="@+id/date3"
                            app:layout_constraintStart_toEndOf="@+id/date3"
                            app:layout_constraintTop_toTopOf="@+id/date3" />

                        <TextView
                            android:id="@+id/date4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:fontFamily="@font/pretendardregular"
                            android:text="09:00"
                            android:textColor="@color/black5"
                            android:textSize="14dp"
                            app:layout_constraintBottom_toBottomOf="@+id/textView114"
                            app:layout_constraintStart_toEndOf="@+id/textView114"
                            app:layout_constraintTop_toTopOf="@+id/textView114" />

                        <ImageView
                            android:id="@+id/imageView52"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:src="@drawable/check_red"
                            app:layout_constraintStart_toStartOf="@+id/textView110"
                            app:layout_constraintTop_toBottomOf="@+id/textView110" />

                        <TextView
                            android:id="@+id/break_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:fontFamily="@font/pretendardsemi"
                            android:text="매주 월요일 휴무"
                            android:textColor="@color/red3"
                            android:textSize="12dp"
                            app:layout_constraintBottom_toBottomOf="@+id/imageView52"
                            app:layout_constraintStart_toEndOf="@+id/imageView52"
                            app:layout_constraintTop_toTopOf="@+id/imageView52" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/check_btn"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/background_radius_maincolor"
                            android:fontFamily="@font/pretendardsemi"
                            android:outlineProvider="none"
                            android:text="주문하러 가기"
                            android:textColor="@color/white"
                            android:textSize="15dp"
                            app:layout_constraintTop_toBottomOf="@+id/break_time" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>


            </com.google.android.material.appbar.CollapsingToolbarLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="3dp"
        app:layout_collapseMode="parallax"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/collapsing_test">

        <HorizontalScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:fillViewport="true"
            android:scrollbars="none"
            app:layout_constraintTop_toTopOf="@+id/card_view2">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/scroll_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/information_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingStart="20dp"
                    android:paddingTop="9dp"
                    android:paddingEnd="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/story_btn"
                    app:layout_constraintStart_toStartOf="@+id/scroll_layout"
                    app:layout_constraintTop_toTopOf="@+id/scroll_layout">

                    <TextView
                        android:id="@+id/information_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="9dp"
                        android:fontFamily="@font/pretendardregular"
                        android:text="정보"
                        android:textColor="@color/colorGray8"
                        android:textSize="14dp"
                        app:layout_constraintBottom_toBottomOf="@+id/information_btn"
                        app:layout_constraintEnd_toEndOf="@+id/information_btn"
                        app:layout_constraintStart_toStartOf="@+id/information_btn"
                        app:layout_constraintTop_toTopOf="@+id/information_btn" />

                    <View
                        android:id="@+id/information_view"
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:background="@color/black2"
                        android:visibility="invisible"
                        app:layout_constraintBottom_toBottomOf="@+id/information_btn"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/information_btn" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/story_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingStart="10dp"
                    android:paddingTop="9dp"
                    android:paddingEnd="10dp"
                    app:layout_constraintBottom_toBottomOf="@+id/scroll_layout"
                    app:layout_constraintEnd_toStartOf="@+id/event_btn"
                    app:layout_constraintStart_toEndOf="@+id/information_btn"
                    app:layout_constraintTop_toTopOf="@+id/scroll_layout">

                    <TextView
                        android:id="@+id/story_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="9dp"
                        android:fontFamily="@font/pretendardregular"
                        android:text="스토리"
                        android:textColor="@color/colorGray8"
                        android:textSize="14dp"
                        app:layout_constraintBottom_toBottomOf="@+id/story_btn"
                        app:layout_constraintEnd_toEndOf="@+id/story_btn"
                        app:layout_constraintStart_toStartOf="@+id/story_btn"
                        app:layout_constraintTop_toTopOf="@+id/story_btn" />

                    <View
                        android:id="@+id/story_view"
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:background="@color/black2"
                        android:visibility="invisible"
                        app:layout_constraintBottom_toBottomOf="@+id/story_btn"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/event_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingStart="10dp"
                    android:paddingTop="9dp"
                    android:paddingEnd="10dp"
                    app:layout_constraintBottom_toBottomOf="@+id/scroll_layout"
                    app:layout_constraintEnd_toStartOf="@+id/star_btn"
                    app:layout_constraintStart_toEndOf="@+id/story_btn"
                    app:layout_constraintTop_toTopOf="@+id/scroll_layout">

                    <TextView
                        android:id="@+id/event_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="9dp"
                        android:fontFamily="@font/pretendardregular"
                        android:text="이벤트"
                        android:textColor="@color/colorGray8"
                        android:textSize="14dp"
                        app:layout_constraintBottom_toBottomOf="@+id/event_btn"
                        app:layout_constraintEnd_toEndOf="@+id/event_btn"
                        app:layout_constraintStart_toStartOf="@+id/event_btn"
                        app:layout_constraintTop_toTopOf="@+id/event_btn" />

                    <View
                        android:id="@+id/event_view"
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:background="@color/black2"
                        android:visibility="invisible"
                        app:layout_constraintBottom_toBottomOf="@+id/event_btn"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/star_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:paddingStart="10dp"
                    android:paddingTop="9dp"
                    android:paddingEnd="10dp"
                    app:layout_constraintBottom_toBottomOf="@+id/scroll_layout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/event_btn"
                    app:layout_constraintTop_toTopOf="@+id/scroll_layout">

                    <TextView
                        android:id="@+id/star_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="9dp"
                        android:fontFamily="@font/pretendardregular"
                        android:text="별점"
                        android:textColor="@color/colorGray8"
                        android:textSize="14dp"
                        app:layout_constraintBottom_toBottomOf="@+id/star_btn"
                        app:layout_constraintEnd_toEndOf="@+id/star_btn"
                        app:layout_constraintStart_toStartOf="@+id/star_btn"
                        app:layout_constraintTop_toTopOf="@+id/star_btn" />

                    <View
                        android:id="@+id/star_view"
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:background="@color/black2"
                        android:visibility="invisible"
                        app:layout_constraintBottom_toBottomOf="@+id/star_btn"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </HorizontalScrollView>
    </androidx.cardview.widget.CardView>

        </com.google.android.material.appbar.AppBarLayout>


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/shop_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>