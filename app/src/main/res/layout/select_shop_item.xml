<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/shop_item_layout"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/background_radius_white5"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/desert4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/event_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/event"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/shop_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        app:layout_constraintBottom_toBottomOf="@+id/shop_item_layout"
        app:layout_constraintStart_toEndOf="@+id/shop_item_layout"
        app:layout_constraintTop_toTopOf="@+id/shop_item_layout">

        <TextView
            android:id="@+id/shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:fontFamily="@font/pretendard_bold"
            android:text="청라호수공원점"
            android:textColor="@color/black2"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="@+id/shop_information"
            app:layout_constraintTop_toTopOf="@+id/shop_information" />

        <TextView
            android:id="@+id/shop_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_bold"
            android:text="200m"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black2"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/shop_name"
            app:layout_constraintStart_toEndOf="@+id/shop_name"
            app:layout_constraintTop_toTopOf="@+id/shop_name" />

        <TextView
            android:id="@+id/shop_location2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/pretendardregular"
            android:text="인천광역시 서구 크리스탈로 102"
            android:textColor="@color/black5"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="@+id/shop_information"
            app:layout_constraintTop_toBottomOf="@+id/shop_name" />

        <TextView
            android:id="@+id/weekday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/pretendardregular"
            android:text="평일"
            android:textColor="@color/black5"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="@+id/shop_information"
            app:layout_constraintTop_toBottomOf="@+id/shop_location2" />

        <TextView
            android:id="@+id/weekday_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendardregular"
            android:text="09:00"
            android:layout_marginLeft="3dp"
            android:textColor="@color/black5"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="@+id/weekday"
            app:layout_constraintStart_toEndOf="@+id/weekday"
            app:layout_constraintTop_toTopOf="@+id/weekday" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendardregular"
            android:text="~"
            android:layout_marginLeft="3dp"
            android:textColor="@color/black5"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/weekday_start"
            app:layout_constraintTop_toTopOf="@+id/weekday_start" />

        <TextView
            android:id="@+id/weekday_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendardregular"
            android:text="22:00"
            android:textColor="@color/black5"
            android:textSize="14dp"
            android:layout_marginLeft="3dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendardregular"
            android:text="|"
            android:textColor="@color/black5"
            android:textSize="14dp"
            android:layout_marginLeft="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/weekday_end"
            app:layout_constraintTop_toTopOf="@+id/weekday_end"
            app:layout_constraintVertical_bias="0.0" />


        <TextView
            android:id="@+id/weekend_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendardregular"
            android:text="09:00"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black5"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView3"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toTopOf="@+id/textView3" />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendardregular"
            android:text="~"
            android:layout_marginLeft="3dp"
            android:textColor="@color/black5"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/weekend_start"
            app:layout_constraintTop_toTopOf="@+id/weekend_start" />

        <TextView
            android:id="@+id/weekend_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendardregular"
            android:text="22:00"
            android:textColor="@color/black5"
            android:textSize="14dp"
            android:layout_marginLeft="3dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView4"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toTopOf="@+id/textView4" />

        <ImageView
            android:id="@+id/fix_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fix_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/fix_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:src="@drawable/fix_black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>