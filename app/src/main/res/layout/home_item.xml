<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_item"
        android:layout_width="match_parent"
        android:layout_height="169dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/background_radius_red_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/recommand_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/recommand_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="27dp"
                android:layout_marginBottom="22dp"
                android:scaleType="fitXY"
                android:src="@drawable/desert4"
                app:layout_constraintStart_toStartOf="@+id/recommand_bg"
                app:layout_constraintTop_toTopOf="@id/recommand_bg" />

            <TextView
                android:id="@+id/recommand_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/lexend_bold"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="14dp"
                app:layout_constraintStart_toEndOf="@+id/recommand_image"
                app:layout_constraintTop_toTopOf="@+id/recommand_bg" />

            <TextView
                android:id="@+id/recommand_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="30dp"
                android:fontFamily="@font/pretendardsemi"
                android:text="축축한 날씨를 잊게 해줄 시원하고 달콤한 브라우니 아이스크림"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/recommand_bg"
                app:layout_constraintStart_toEndOf="@+id/recommand_image"
                app:layout_constraintTop_toBottomOf="@+id/recommand_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>