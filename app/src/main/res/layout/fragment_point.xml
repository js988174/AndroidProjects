<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Main.My39.Point.PointFragment">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="포인트"
                android:fontFamily="@font/pretendardsemi"
                android:textColor="@color/black2"
                android:textSize="24dp" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/findImage"
                android:layout_width="70dp"
                android:layout_height="50dp">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:src="@drawable/left"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="206dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:elevation="1dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="134dp"
            android:background="@color/colorGray">


            <TextView
                android:id="@+id/my_point_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/pretendard_bold"
                android:text="나의 보유 포인트"
                android:textColor="@color/black2"
                android:textSize="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/image"
                app:layout_constraintBottom_toTopOf="@+id/my_point_text"
                app:layout_constraintEnd_toEndOf="@+id/my_point_text"
                app:layout_constraintStart_toEndOf="@+id/my_point_text" />


            <TextView
                android:id="@+id/my_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend_bold"
                android:text="1,200"
                android:textColor="@color/black2"
                android:textSize="26dp"
                app:layout_constraintEnd_toEndOf="@+id/my_point_text"
                app:layout_constraintStart_toStartOf="@+id/my_point_text"
                app:layout_constraintTop_toBottomOf="@+id/my_point_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexenddeca_regular"
                android:text="P"
                android:textColor="@color/black2"
                android:textSize="26dp"
                app:layout_constraintBottom_toBottomOf="@+id/my_point"
                app:layout_constraintEnd_toEndOf="@+id/my_point_text"
                app:layout_constraintStart_toEndOf="@+id/my_point"
                app:layout_constraintTop_toBottomOf="@+id/my_point_text" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginTop="134dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="33dp"
                android:fontFamily="@font/pretendmedium"
                android:gravity="center"
                android:text="보유 1P 이상\n1P 단위로 사용 가능"
                android:textColor="@color/black2"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView41"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gray_bar"
                app:layout_constraintBottom_toBottomOf="@+id/textView3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView3" />

            <TextView
                android:id="@+id/extinction_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/lexend_bold"
                android:text="0"
                android:textColor="@color/black2"
                android:textSize="16dp"
                app:layout_constraintStart_toEndOf="@+id/imageView41"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView83"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexenddeca_regular"
                android:text=" P"
                android:textColor="@color/black2"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/extinction_point"
                app:layout_constraintStart_toEndOf="@+id/extinction_point"
                app:layout_constraintTop_toTopOf="@+id/extinction_point" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendardsemi"
                android:text="이번 달 소멸 예정 포인트"
                android:textColor="@color/black2"
                android:textSize="14dp"
                app:layout_constraintEnd_toEndOf="@+id/textView83"
                app:layout_constraintStart_toEndOf="@+id/extinction_point"
                app:layout_constraintTop_toBottomOf="@+id/extinction_point" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_bold"
        android:text="포인트 내역"
        android:textColor="@color/black2"
        android:textSize="18dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2" />


            <TextView
                android:id="@+id/no_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="포인트 내역이 없습니다."
                android:visibility="gone"
                android:layout_marginTop="140dp"
                android:textSize="12dp"
                android:textColor="@color/black2"
                android:fontFamily="@font/pretendardregular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/point_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="130dp"
        tools:listitem="@layout/point_item_layout"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

