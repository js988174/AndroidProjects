<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/background_radius_gray12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/layout2"
                app:layout_constraintEnd_toEndOf="@+id/layout2"
                app:layout_constraintStart_toStartOf="@+id/layout2"
                app:layout_constraintTop_toTopOf="@+id/layout2" />

    </androidx.constraintlayout.widget.ConstraintLayout>



            <ImageView
                android:id="@+id/close_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/close_black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/dessert_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/pretendard_bold"
            android:text="달고나 초코라떼 아이스"
            android:textColor="@color/black2"
            android:textSize="14dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintStart_toEndOf="@+id/layout2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ice_hot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/pretendardregular"
            android:text="ICED"
            android:textColor="@color/blue"
            android:textSize="12dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintStart_toEndOf="@+id/layout2"
            app:layout_constraintTop_toBottomOf="@+id/dessert_name" />

            <TextView
                android:id="@+id/textView59"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  |  "
                android:textColor="@color/colorGray6"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/ice_hot"
                app:layout_constraintStart_toEndOf="@+id/ice_hot"
                app:layout_constraintTop_toTopOf="@+id/ice_hot" />

            <TextView
                android:id="@+id/size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendardregular"
                android:text="GRANDE"
                android:textColor="@color/black5"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView59"
                app:layout_constraintStart_toEndOf="@+id/textView59"
                app:layout_constraintTop_toTopOf="@+id/textView59" />

            <TextView
                android:id="@+id/textView60"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  |  "
                android:textColor="@color/colorGray6"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/size"
                app:layout_constraintStart_toEndOf="@+id/size"
                app:layout_constraintTop_toTopOf="@+id/size" />

            <TextView
                android:id="@+id/cup_kinds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendardregular"
                android:text="개인컵"
                android:textColor="@color/black5"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView60"
                app:layout_constraintStart_toEndOf="@+id/textView60"
                app:layout_constraintTop_toTopOf="@+id/textView60" />

            <TextView
                android:id="@+id/main_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendardsemi"
                android:text="6.700"
                android:textColor="@color/black2"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView61"
                app:layout_constraintEnd_toStartOf="@+id/textView61"
                app:layout_constraintTop_toTopOf="@+id/textView61" />

            <TextView
                android:id="@+id/textView61"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendardsemi"
                android:text="원"
                android:textColor="@color/black2"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/cup_kinds"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/cup_kinds" />

        <TextView
            android:id="@+id/shot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/pretendardregular"
            android:text="샷추가 +1"
            android:textColor="@color/black5"
            android:textSize="12dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintStart_toEndOf="@+id/layout2"
            app:layout_constraintTop_toBottomOf="@+id/ice_hot" />

            <TextView
                android:id="@+id/textView62"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  |  "
                android:textColor="@color/colorGray6"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/shot"
                app:layout_constraintStart_toEndOf="@+id/shot"
                app:layout_constraintTop_toTopOf="@+id/shot" />

            <TextView
                android:id="@+id/wather_less"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendardregular"
                android:text="물 적게"
                android:textColor="@color/black5"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView62"
                app:layout_constraintStart_toEndOf="@+id/textView62"
                app:layout_constraintTop_toTopOf="@+id/textView62" />

            <TextView
                android:id="@+id/textView63"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  |  "
                android:textColor="@color/colorGray6"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/wather_less"
                app:layout_constraintStart_toEndOf="@+id/wather_less"
                app:layout_constraintTop_toTopOf="@+id/wather_less" />

            <TextView
                android:id="@+id/ice_much"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendardregular"
                android:text="얼음 많이"
                android:textColor="@color/black5"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView63"
                app:layout_constraintStart_toEndOf="@+id/textView63"
                app:layout_constraintTop_toTopOf="@+id/textView63" />

            <TextView
                android:id="@+id/option_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendardsemi"
                android:text="6.700"
                android:textColor="@color/black2"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView64"
                app:layout_constraintEnd_toStartOf="@+id/textView64"
                app:layout_constraintTop_toTopOf="@+id/textView64" />

            <TextView
                android:id="@+id/textView64"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendardsemi"
                android:text="원"
                android:textColor="@color/black2"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/ice_much"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ice_much" />

        <TextView
            android:id="@+id/sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/pretendardregular"
            android:text="텀블러 할인 5%"
            android:textColor="@color/black5"
            android:textSize="12dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintStart_toEndOf="@+id/layout2"
            app:layout_constraintTop_toBottomOf="@+id/shot" />

            <TextView
                android:id="@+id/textView66"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendardsemi"
                android:text="- "
                android:textColor="@color/black2"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/sale_price"
                app:layout_constraintEnd_toStartOf="@+id/sale_price"
                app:layout_constraintTop_toTopOf="@+id/sale_price" />

            <TextView
                android:id="@+id/sale_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendardsemi"
                android:text="6.700"
                android:textColor="@color/black2"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView65"
                app:layout_constraintEnd_toStartOf="@+id/textView65"
                app:layout_constraintTop_toTopOf="@+id/textView65" />

            <TextView
                android:id="@+id/textView65"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendardsemi"
                android:text="원"
                android:textColor="@color/black2"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/sale"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/sale" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/plus_mius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/layout2">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/minus_btn1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/background_radius_100_gray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/minus_gray"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/number1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:fontFamily="@font/pretendmedium"
                android:text="1"
                android:textColor="@color/black2"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/minus_btn1"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/plus_btn1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="14dp"
                android:background="@drawable/background_radius_100_2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/number1"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/plus2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/textView52"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendmedium"
                android:text="원"
                android:textColor="@color/black2"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/count_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendmedium"
                android:text="500"
                android:textColor="@color/black2"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView52"
                app:layout_constraintEnd_toStartOf="@+id/textView52"
                app:layout_constraintTop_toTopOf="@+id/textView52" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorGray11"
            app:layout_constraintTop_toBottomOf="@+id/plus_mius" />

        <View
            android:layout_width="match_parent"
            android:layout_height="21dp"
            app:layout_constraintTop_toTopOf="@+id/view1" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>