<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        app:behavior_hideable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Main.Order.dialog.OrderShopDetailFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dialog_layout"
        android:layout_width="match_parent"
        android:layout_height="492dp"
        android:layout_marginTop="31dp"
        android:background="@drawable/order_background"
        app:layout_constraintTop_toTopOf="@+id/order_layout">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="208dp"
            android:scaleType="fitXY"
            android:layout_marginStart="20dp"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="@+id/dialog_layout" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/location_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/background_radius_gray4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView">

            <ImageView
                android:id="@+id/imageView34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/location_gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/pretendard_bold"
                android:text="청라호수공원점"
                android:textColor="@color/black2"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView34"
                app:layout_constraintStart_toEndOf="@+id/imageView34"
                app:layout_constraintTop_toTopOf="@+id/imageView34" />


            <TextView
                android:id="@+id/distance"
                android:layout_width="38dp"
                android:layout_height="18dp"
                android:layout_marginTop="17dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/background_radius_black_button2"
                android:gravity="center"
                android:text="200M"
                android:textColor="@color/white"
                android:textSize="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/shop_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/pretendardsemi"
                android:text="인천광역시 서구 크리스탈로 102"
                android:textColor="@color/black2"
                android:textSize="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/shop_name" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/shop_location">

                <TextView
                    android:id="@+id/textView43"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_light"
                    android:text="영업시간  |  평일 "
                    android:textColor="@color/black5"
                    android:textSize="12dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_light"
                    android:text="09:00"
                    android:textColor="@color/black5"
                    android:textSize="12dp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView43"
                    app:layout_constraintStart_toEndOf="@+id/textView43"
                    app:layout_constraintTop_toTopOf="@+id/textView43" />

                <TextView
                    android:id="@+id/textView46"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_light"
                    android:text=" ~ "
                    android:textColor="@color/black5"
                    android:textSize="12dp"
                    app:layout_constraintBottom_toBottomOf="@+id/start_time"
                    app:layout_constraintStart_toEndOf="@+id/start_time"
                    app:layout_constraintTop_toTopOf="@+id/start_time" />


                <TextView
                    android:id="@+id/end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_light"
                    android:text="22:00"
                    android:textColor="@color/black5"
                    android:textSize="12dp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView46"
                    app:layout_constraintStart_toEndOf="@+id/textView46"
                    app:layout_constraintTop_toTopOf="@+id/textView46" />


                <TextView
                    android:id="@+id/textView47"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:text="주말 "
                    android:textColor="@color/black5"
                    android:textSize="12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/end_time"
                    app:layout_constraintTop_toTopOf="@+id/end_time" />

                <TextView
                    android:id="@+id/start_time1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:00"
                    android:textColor="@color/black5"
                    android:textSize="12dp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView47"
                    app:layout_constraintStart_toEndOf="@+id/textView47"
                    app:layout_constraintTop_toTopOf="@+id/textView47" />

                <TextView
                    android:id="@+id/textView48"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_light"
                    android:text=" ~ "
                    android:textColor="@color/black5"
                    android:textSize="12dp"
                    app:layout_constraintBottom_toBottomOf="@+id/start_time1"
                    app:layout_constraintStart_toEndOf="@+id/start_time1"
                    app:layout_constraintTop_toTopOf="@+id/start_time1" />

                <TextView
                    android:id="@+id/end_time1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:00"
                    android:textColor="@color/black5"
                    android:textSize="12dp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView48"
                    app:layout_constraintStart_toEndOf="@+id/textView48"
                    app:layout_constraintTop_toTopOf="@+id/textView48" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_004"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="35dp"
            app:layout_constraintBottom_toBottomOf="@+id/dialog_layout"
            app:layout_constraintEnd_toEndOf="@+id/dialog_layout"
            app:layout_constraintStart_toStartOf="@+id/dialog_layout">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cancel_btn"
                android:layout_width="114dp"
                android:layout_height="42dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/background_radius_maincolor4"
                app:layout_constraintBottom_toBottomOf="@+id/layout_004"
                app:layout_constraintEnd_toStartOf="@+id/select_shop_btn"
                app:layout_constraintStart_toStartOf="@+id/layout_004"
                app:layout_constraintTop_toTopOf="@+id/layout_004">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendardsemi"
                    android:text="닫기"
                    android:textColor="@color/black2"
                    android:textSize="16dp"
                    app:layout_constraintBottom_toBottomOf="@+id/cancel_btn"
                    app:layout_constraintEnd_toEndOf="@+id/cancel_btn"
                    app:layout_constraintStart_toStartOf="@+id/cancel_btn"
                    app:layout_constraintTop_toTopOf="@+id/cancel_btn" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/select_shop_btn"
                android:layout_width="158dp"
                android:layout_height="42dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/background_radius_maincolor4_1"
                app:layout_constraintBottom_toBottomOf="@+id/layout_004"
                app:layout_constraintEnd_toEndOf="@+id/layout_004"
                app:layout_constraintStart_toEndOf="@+id/cancel_btn"
                app:layout_constraintTop_toTopOf="@+id/layout_004">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendardsemi"
                    android:text="매장 선택"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    app:layout_constraintBottom_toBottomOf="@+id/select_shop_btn"
                    app:layout_constraintEnd_toEndOf="@+id/select_shop_btn"
                    app:layout_constraintStart_toStartOf="@+id/select_shop_btn"
                    app:layout_constraintTop_toTopOf="@+id/select_shop_btn" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/order_layout"
        android:layout_width="138dp"
        android:layout_height="60dp"
        android:background="@drawable/bottomsheet_dialog2"
        app:layout_constraintEnd_toEndOf="@+id/dialog_layout"
        app:layout_constraintStart_toStartOf="@+id/dialog_layout"
        app:layout_constraintTop_toTopOf="@+id/dialog_layout">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/order_shop_detail"
            app:layout_constraintBottom_toBottomOf="@+id/order_layout"
            app:layout_constraintEnd_toEndOf="@+id/order_layout"
            app:layout_constraintStart_toStartOf="@+id/order_layout"
            app:layout_constraintTop_toTopOf="@+id/order_layout" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>