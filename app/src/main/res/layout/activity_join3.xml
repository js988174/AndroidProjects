<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Join.Join3Activity">


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dp"
                    android:fontFamily="@font/pretendardsemi"
                    android:text="정보 입력"
                    android:textColor="@color/black2"
                    android:textSize="24dp" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/findImage2"
                    android:layout_width="70dp"
                    android:layout_height="50dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:src="@drawable/left"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.appcompat.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="60dp"
                android:src="@drawable/info"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/pretendmedium"
                android:text="회원님의 정보를 입력해 주세요."
                android:textColor="@color/black4"
                app:layout_constraintBottom_toBottomOf="@+id/imageView16"
                app:layout_constraintStart_toEndOf="@+id/imageView16"
                app:layout_constraintTop_toTopOf="@+id/imageView16" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/join_id_layout"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/login_black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView21">

                <TextView
                    android:id="@+id/idText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/pretendardsemi"
                    android:text="아이디"
                    android:textColor="@color/black2"
                    android:textSize="18dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/idText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" *"
                    android:textColor="@color/black2"
                    android:textSize="18dp"
                    app:layout_constraintBottom_toBottomOf="@+id/idText"
                    app:layout_constraintStart_toEndOf="@+id/idText"
                    app:layout_constraintTop_toTopOf="@+id/idText" />

                <TextView
                    android:id="@+id/idText3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendmedium"
                    android:text=""
                    android:textColor="@color/mainColor"
                    android:textSize="12dp"
                    app:layout_constraintBottom_toBottomOf="@+id/idText2"
                    app:layout_constraintStart_toEndOf="@+id/idText2"
                    app:layout_constraintTop_toTopOf="@+id/idText2" />

                <EditText
                    android:id="@+id/joinIdArea"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginBottom="12dp"
                    android:background="@android:color/transparent"
                    android:hint="아이디를 입력해 주세요."
                    android:inputType="text"
                    android:textColor="@color/colorGray2"
                    android:textSize="14dp"
                    app:layout_constraintBottom_toBottomOf="@+id/join_id_layout"
                    app:layout_constraintStart_toStartOf="@+id/join_id_layout"
                    app:layout_constraintTop_toBottomOf="@+id/idText" />


                <ImageView
                    android:id="@+id/clearId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="7dp"
                    android:src="@drawable/clear_default"
                    app:layout_constraintBottom_toBottomOf="@+id/checkBtnId"
                    app:layout_constraintEnd_toStartOf="@+id/checkBtnId"
                    app:layout_constraintTop_toTopOf="@+id/checkBtnId" />

                <ImageView
                    android:id="@+id/clearId2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="7dp"
                    android:src="@drawable/clear"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="@+id/checkBtnId"
                    app:layout_constraintEnd_toStartOf="@+id/checkBtnId"
                    app:layout_constraintTop_toTopOf="@+id/checkBtnId" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/checkBtnId"
                    android:layout_width="60dp"
                    android:layout_height="27dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="11dp"
                    android:background="@drawable/background_radius_gray2"
                    android:fontFamily="@font/pretendardm"
                    android:outlineProvider="none"
                    android:text="중복확인"
                    android:textColor="@color/colorWhite"
                    android:textSize="12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/join_pw_layout"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/login_black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/join_id_layout">

                <TextView
                    android:id="@+id/pwText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/pretendardsemi"
                    android:text="비밀번호"
                    android:textColor="@color/black2"
                    android:textSize="18dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/pwText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" *"
                    android:textColor="@color/black2"
                    android:textSize="18dp"
                    app:layout_constraintBottom_toBottomOf="@+id/pwText"
                    app:layout_constraintStart_toEndOf="@+id/pwText"
                    app:layout_constraintTop_toTopOf="@+id/pwText" />

                <TextView
                    android:id="@+id/pwText3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendmedium"
                    android:hint="영문+숫자 조합 8자 이상"
                    android:textColor="@color/colorGray4"
                    android:textSize="12dp"
                    app:layout_constraintBottom_toBottomOf="@+id/pwText2"
                    app:layout_constraintStart_toEndOf="@+id/pwText2"
                    app:layout_constraintTop_toTopOf="@+id/pwText2" />

                <EditText
                    android:id="@+id/joinPwArea"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginBottom="12dp"
                    android:background="@android:color/transparent"
                    android:hint="비밀번호를 입력해 주세요."
                    android:inputType="text"
                    android:textColor="@color/colorGray2"
                    android:textSize="14dp"
                    app:layout_constraintBottom_toBottomOf="@+id/join_pw_layout"
                    app:layout_constraintStart_toStartOf="@+id/join_pw_layout"
                    app:layout_constraintTop_toBottomOf="@+id/pwText" />


                <ImageView
                    android:id="@+id/clearPw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="14dp"
                    android:src="@drawable/clear_default"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <ImageView
                    android:id="@+id/clearPw2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="14dp"
                    android:src="@drawable/clear"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/join_pw2_layout"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/login_black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/join_pw_layout">

                <TextView
                    android:id="@+id/pw2Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/pretendardsemi"
                    android:text="비밀번호 확인"
                    android:textColor="@color/black2"
                    android:textSize="18dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/pw2Text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" *"
                    android:textColor="@color/black2"
                    android:textSize="18dp"
                    app:layout_constraintBottom_toBottomOf="@+id/pw2Text"
                    app:layout_constraintStart_toEndOf="@+id/pw2Text"
                    app:layout_constraintTop_toTopOf="@+id/pw2Text" />

                <TextView
                    android:id="@+id/pw2Text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendmedium"
                    android:text=""
                    android:textColor="@color/colorGray4"
                    android:textSize="12dp"
                    app:layout_constraintBottom_toBottomOf="@+id/pw2Text2"
                    app:layout_constraintStart_toEndOf="@+id/pw2Text2"
                    app:layout_constraintTop_toTopOf="@+id/pw2Text2" />

                <EditText
                    android:id="@+id/joinPw2Area"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginBottom="12dp"
                    android:background="@android:color/transparent"
                    android:hint="비밀번호를 한번 더 입력해 주세요."
                    android:inputType="text"
                    android:textColor="@color/colorGray2"
                    android:textSize="14dp"
                    app:layout_constraintBottom_toBottomOf="@+id/join_pw2_layout"
                    app:layout_constraintStart_toStartOf="@+id/join_pw2_layout"
                    app:layout_constraintTop_toBottomOf="@+id/pw2Text" />


                <ImageView
                    android:id="@+id/clear2Pw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="14dp"
                    android:src="@drawable/clear_default"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <ImageView
                    android:id="@+id/clear2Pw2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="14dp"
                    android:src="@drawable/clear"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/join_email_layout"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/login_black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/join_pw2_layout">

                <TextView
                    android:id="@+id/emailText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/pretendardsemi"
                    android:text="이메일"
                    android:textColor="@color/black2"
                    android:textSize="18dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/emailText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" *"
                    android:textColor="@color/black2"
                    android:textSize="18dp"
                    app:layout_constraintBottom_toBottomOf="@+id/emailText"
                    app:layout_constraintStart_toEndOf="@+id/emailText"
                    app:layout_constraintTop_toTopOf="@+id/emailText" />


                <EditText
                    android:id="@+id/joinEmailArea"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginBottom="12dp"
                    android:background="@android:color/transparent"
                    android:hint="이메일을 입력해주세요."
                    android:inputType="textEmailAddress"
                    android:textColor="@color/colorGray2"
                    android:textSize="14dp"
                    app:layout_constraintBottom_toBottomOf="@+id/join_email_layout"
                    app:layout_constraintStart_toStartOf="@+id/join_email_layout"
                    app:layout_constraintTop_toBottomOf="@+id/emailText" />




            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/join_nickname_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/login_black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/join_email_layout">

                <TextView
                    android:id="@+id/nicknameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/pretendardsemi"
                    android:text="닉네임"
                    android:textColor="@color/black2"
                    android:textSize="18dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <EditText
                    android:id="@+id/joinNicknameArea"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginBottom="12dp"
                    android:background="@android:color/transparent"
                    android:hint="닉네임을 입력해 주세요."
                    android:inputType="text"
                    android:textColor="@color/colorGray2"
                    android:textSize="14dp"
                    app:layout_constraintBottom_toBottomOf="@+id/join_nickname_layout"
                    app:layout_constraintStart_toStartOf="@+id/join_nickname_layout"
                    app:layout_constraintTop_toBottomOf="@+id/nicknameText" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/join_name_layout"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/join_white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/join_nickname_layout">

                <TextView
                    android:id="@+id/nameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/pretendardsemi"
                    android:text="이름"
                    android:textColor="@color/check_NoColor"
                    android:textSize="18dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <EditText
                    android:id="@+id/joinNameArea"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginBottom="12dp"
                    android:text="홍길동"
                    android:background="@android:color/transparent"
                    android:inputType="text"
                    android:fontFamily="@font/pretendard_light"
                    android:privateImeOptions="defaultInputmode=korean"
                    android:textColor="@color/colorGray2"
                    android:textSize="14dp"
                    app:layout_constraintBottom_toBottomOf="@+id/join_name_layout"
                    app:layout_constraintStart_toStartOf="@+id/join_name_layout"
                    app:layout_constraintTop_toBottomOf="@+id/nameText" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/join_phone_layout"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/join_white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/join_name_layout">

                <TextView
                    android:id="@+id/phoneText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/pretendardsemi"
                    android:text="휴대폰 번호"
                    android:textColor="@color/check_NoColor"
                    android:textSize="18dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <EditText
                    android:id="@+id/joinPhoneArea"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginBottom="12dp"
                    android:background="@android:color/transparent"
                    android:inputType="phone"
                    android:text="01012345678"
                    android:textColor="@color/check_NoColor"
                    android:textSize="14dp"
                    app:layout_constraintBottom_toBottomOf="@+id/join_phone_layout"
                    app:layout_constraintStart_toStartOf="@+id/join_phone_layout"
                    app:layout_constraintTop_toBottomOf="@+id/phoneText" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/join_birth_layout"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/join_white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/join_phone_layout">

                <TextView
                    android:id="@+id/birthText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/pretendardsemi"
                    android:text="생년 월일"
                    android:textColor="@color/check_NoColor"
                    android:textSize="18dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <EditText
                    android:id="@+id/joinBirthArea"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginBottom="12dp"
                    android:background="@android:color/transparent"
                    android:text="1900-00-00"
                    android:textColor="@color/check_NoColor"
                    android:textSize="14dp"
                    android:fontFamily="@font/pretendard_light"
                    app:layout_constraintBottom_toBottomOf="@+id/join_birth_layout"
                    app:layout_constraintStart_toStartOf="@+id/join_birth_layout"
                    app:layout_constraintTop_toBottomOf="@+id/birthText" />

            </androidx.constraintlayout.widget.ConstraintLayout>




            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/successBtn"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="45dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="27dp"
                android:background="@drawable/background_radius_maincolor"
                android:fontFamily="@font/pretendardm"
                android:outlineProvider="none"
                android:text="회원가입"
                android:textColor="@color/colorWhite"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/join_birth_layout" />


            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:layout_constraintTop_toBottomOf="@+id/successBtn"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>